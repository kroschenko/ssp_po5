                        <Label fx:id="idRowLabel" GridPane.columnIndex="1" GridPane.halignment="RIGHT" />
                        <Label fx:id="modelRowLabel" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                        <Label fx:id="userNameRowLabel" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                        <Label fx:id="regDateLabel" text="Дата регистрации" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
                        <Label fx:id="modelLabel" text="Модель компьютера" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                        <Label fx:id="regDateRowLabel" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
