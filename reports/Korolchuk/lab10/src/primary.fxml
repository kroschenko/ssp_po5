              </columns>
            </TableView>
            <VBox prefHeight="656.0" prefWidth="276.0">
               <children>
                  <DatePicker fx:id="filterInput" prefHeight="26.0" prefWidth="289.0" promptText="Фильтр даты регистрации" />
